{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "noImplicitAny": true
  },
  "include": [
    "src/**/*",
    "server/**/*"
  ],
  "exclude": ["node_modules"]
}
